@page "/"
@model VideoCall.Pages.IndexModel
@{
}
<link rel="stylesheet" href="~/css/Landing.css" />
<!-- Hero Section -->
<div class="px-4 py-5 my-5 text-center" id="hero">
    <div class="col-lg-4 mx-auto" id="hero-text">
        <div>
            <h1 class="display-5 fw-bold">Vidroya hoşgeldiniz</h1>
            <p style="font-size:medium" class="lead mb-4">Tek bir yerden sohbet etmek ve toplantı yapmak için hemen oturum açın.</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Join</button>
                <button type="button" class="btn btn-outline-secondary btn-lg px-4">Secondary</button>
            </div>
        </div>
    </div>
    <div class="col-lg-6 banner">
        <img src="~/vectorpage.png" alt="">
    </div>
</div>
<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container text-center">
        <h1>Features</h1>
        <div class="row">
            <div class="col-md-4">
                <h2>Easy to Use</h2>
                <p>Join a video conference with just a few clicks. No technical expertise required.</p>
            </div>
            <div class="col-md-4">
                <h2>High Quality Video</h2>
                <p>Experience high-definition video quality for your meetings and presentations.</p>
            </div>
            <div class="col-md-4">
                <h2>Secure and Private</h2>
                <p>Your data is safe with us. We prioritize your privacy and security.</p>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" class="bg-light py-5">
    <div class="container text-center">
        <h2>Choose a Plan</h2>
        <p>Select the plan that best suits your needs.</p>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Free Plan</h5>
                        <p class="mb-2">
                            <i class="mdi mdi-checkbox-marked-circle text-success f-18 mr-2"></i><b>Unlimited</b>
                            Target Audience
                        </p>
                        <p class="mb-2">
                            <i class="mdi mdi-checkbox-marked-circle text-success f-18 mr-2"></i><b>1</b>
                            User Account
                        </p>
                        <p class="card-text">$0/month</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Pro Plan</h5>
                        <p class="card-text">Advanced features</p>
                        <p class="card-text">$19/month</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Contact Us</h2>
                <p>If you have any questions or need assistance, feel free to get in touch with us.</p>
            </div>
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="5" placeholder="Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>
